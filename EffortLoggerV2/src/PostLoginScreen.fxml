<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="423.0" prefWidth="531.0" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PostLoginScreen">

    <!-- Greeting label -->
    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px;" />

    <!-- Buttons -->
    <Button fx:id="effortLoggerInputButton" onAction="#inputClicked" prefWidth="200" style="-fx-font-size: 18px;" text="EffortLogger Input" />
    <Button fx:id="effortLoggerDisplayButton" onAction="#displayClicked" prefWidth="200" style="-fx-font-size: 18px;" text="EffortLogger Display" />
    <Button fx:id="effortLoggerDeletionButton" onAction="#deletionClicked" prefWidth="200" style="-fx-font-size: 18px;" text="EffortLogger Deletion" />
    <Button fx:id="storyInputButton" onAction="#storyInputClicked" prefWidth="200" style="-fx-font-size: 18px;" text="Story Input" />
   <Button fx:id="planningPokerButton" mnemonicParsing="false" onAction="#planningPokerClicked" prefHeight="35.0" prefWidth="201.0" text="Planning Poker" />
   <Button fx:id="backButton" mnemonicParsing="false" onAction="#backClicked" prefWidth="45.0" text="Back" />

</VBox>
